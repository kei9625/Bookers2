<!--ログイン後のUsersボタンをクリックした後のレイアウト-->
<!--headerのHome押したらここに戻る-->
<h1>Users#show</h1>
  <h2>User info</h2>


  <h2>New book</h2>
  <%= form_with do |f| %>
    <label for="book_title">Title</label>
    <%= f.text_field :title %>

    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book'%>
  <% end %>