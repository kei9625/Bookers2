<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  <% if @books.errors.any? %>
  <%= @books.errors.count %>件のerrorが発生しました
  <ul>
  <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>

<%= form_with model: @books do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title %>
  <label for="inputBody">Opinion</label>
  <%= f.text_area :body  %>
  <%= f.submit "Update Book" %>
<% end %>
<p><%= link_to "Show", book_path %> | <%= link_to "Back", books_path %></p>

</div>
</div>
</div>