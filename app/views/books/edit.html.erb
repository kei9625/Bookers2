<%= render 'books/list', user: @user, book: @book %>

<h1>edit_book_path</h1>
<%= form_with model: @books do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title %>
  <label for="inputBody">Opinion</label>
  <%= f.text_area :body  %>
  <%= f.submit "Update book" %>
<% end %>
<p><%= link_to "Show", book_path %> | <%= link_to "Back", books_path %></p>