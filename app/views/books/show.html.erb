<%= render 'books/list', user: @user, book: @book %>
<h2>Book detail</h2>

<p><%=image_tag @books.user.get_profile_image(100,100) %></p>

<p>Title</p>
<span><%= link_to @books.title, user_path(@books.user_id) %></span>

<p>Opinion</p>
<span><%= @books.body %></span>

<% if @books.user == current_user %>
  <%= link_to "destroy", book_path(@books), method: :delete %>
<% end %>