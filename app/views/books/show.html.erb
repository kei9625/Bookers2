<p> <%= flash[:notice] %> </p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'books/list', user: @user, book: @book %>
    </div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <tr>
        <!--%= link_to @book.name, user_path(@books.user_id) %>-->
        <td><%= link_to user_path(@books.user_id) do %>
          <%=image_tag @books.user.get_profile_image(100,100)%></br>
          <%=@user.name%>
          <% end %>
        </td>
        <td><%= link_to @books.title, book_path(@books.user_id) %></td>
        <td><%= @books.body %></td>
        <% if @books.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@books) %></td>
        <td><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削しますか？" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>

</div>
</div>
</div>