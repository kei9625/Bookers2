      <h2>User info</h2>
      <!--profile画像の表示-->
      <%= image_tag user.get_profile_image(100, 100) %>
      <table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <!--＠モデル.カラム名-->
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</tbody></table>

  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_112512" do %>
            <i class="fas fa-user-cog" aria-hidden="true"></i>
            <% end %>

  <% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <ul>
  <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>

  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <label for="book_title">Title</label>
    <%= f.text_field :title %>

    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book'%>
  <% end %>