<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'list', user: @user, book: @book %>
    </div>

<div class="col-md-8 offset-md-1">
<% @books.each do |book| %>

<span><%=image_tag book.user.get_profile_image(100,100)%></span>

<p>Title</p>
<span><%=link_to book.title, book_path(book.id) %></span>

<p>Opinion</p>
<span><%= book.body %></span>

<% end %>

</div>
</div>
</div>